<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>All Chats!</h3>
        <form action="/chats/new" method="get">
            <button>New Chat</button><br><br>
        </form>


    <% for(let chat of chats){ %>
        <div class="chat">
            <p>From : <%= chat.from %></p>
                <div class="msg">
                    <p> <%= chat.msg %></p>
                    <form action="/chats/<%= chat._id%>/edit" method="get">
                        <button>Edit</button>
                    </form>
                </div>
                <p>Received by: <%= chat.to %></p>
                <hr></hr>
                <p>time: <%= chat.created_at.toString().split(" ")[4] %> <br></p>
                <p>Date: <%= chat.created_at.toString().split(" ").slice(0,4).join("-") %> <br></p>
        </div>
        <br><br>
    <% } %>

</body>
</html>

